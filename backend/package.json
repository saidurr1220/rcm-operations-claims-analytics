{
  "name": "rcm-operations-backend",
  "version": "1.0.0",
  "description": "Backend API for RCM Operations Analytics Dashboard",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "init-db": "node scripts/initDb.js",
    "import-data": "node scripts/importData.js",
    "generate-sample-data": "node scripts/generateSampleData.js",
    "add-claim": "node scripts/addSampleClaim.js",
    "add-custom-claim": "node scripts/addCustomClaim.js",
    "setup": "npm run init-db && npm run import-data",
    "setup-with-sample": "npm run generate-sample-data && npm run init-db && npm run import-data"
  },
  "keywords": [
    "rcm",
    "healthcare",
    "analytics",
    "medical-billing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}